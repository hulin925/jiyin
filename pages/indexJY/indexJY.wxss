.navigator-box {
   opacity: 0;
   position: relative;
   background-color: #fff;
   line-height: 1.41176471;
   font-size: 34rpx;
   transform: translateY(-50%);
   transition: 0.3s;
 }
  
  .navigator-box-show {
    opacity: 1;
    transform: translateY(0);
  }
  
  .navigator-box .navigator {
    padding: 20rpx 30rpx;
    position: relative;
    display: flex;
    align-items: center;
    color:#000;
  }
  
  .navigator:before {
    content: " ";
    position: absolute;
    left: 30rpx;
    top: 0;
    right: 30rpx;
    height: 1px;
    border-top: 1rpx solid #d8d8d8;
    color: #d8d8d8;
  }
  
  .navigator:first-child:before {
    display: none;
  }
  
  .navigator-text {
    flex: 1;
  }
  
  .navigator-arrow {
    padding-right: 26rpx;
    position: relative;
  }
  
  .navigator-arrow:after {
    content: " ";
    display: inline-block;
    height: 18rpx;
    width: 18rpx;
    border-width: 2rpx 2rpx 0 0;
    border-color: #888;
    border-style: solid;
    transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    position: absolute;
    top: 50%;
    margin-top: -8rpx;
    right: 28rpx;
  }
  
  .kind-list-item {
    margin: 20rpx;
    /* background-color: #fff; */
    /* border-radius: 4rpx; */
    overflow: hidden;
    /* border-bottom: 1px dashed #888; */
  }
  
  .kind-list-item:first-child {
    margin-top: 0;
  }
  
  .kind-list-text {
    flex: 1;
  }
  
  .kind-list-img {
    width: 60rpx;
    height: 60rpx;
  }
  
  .kind-list-item-hd {
    padding: 16rpx;
    display: flex;
    align-items: center;
    transition: opacity 0.3s;
    background-color:#41a578;
    border-radius: 10rpx;
